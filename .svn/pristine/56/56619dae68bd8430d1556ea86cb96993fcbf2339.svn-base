<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="widget widget-info">
            <div class="widget-header">
                <h4><i class="fa fa-file-text-o"></i> <!--{$title}--></h4>
            </div>
            <div class="widget-body">
                <form id="htmlForm" method="post" class="form-horizontal" action="/manager/role/add.html" data-bv-feedbackicons-valid="fa fa-check" data-bv-feedbackicons-invalid="fa fa-times" data-bv-feedbackicons-validating="fa fa-refresh">

                    <div class="form-group">
                        <label class="col-lg-4 control-label">角色名称</label>
                        <div class="col-lg-7">
                            <input type="text" class="form-control" name="name" data-bv-trigger="blur" required data-bv-notempty-message="角色名称不能为空"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">角色编码</label>
                        <div class="col-lg-7">
                            <input class="form-control" name="code" required data-bv-notempty-message="角色编码不能为空"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-4 control-label">是否为超管</label>
                        <div class="col-lg-5">
                            <div class="form-group no-margin">
                                <select  name="is_super" class="form-control">
                                    <option value="1">是</option>
                                    <option value="2">否</option>
                                </select>
                            </div>
                        </div>
                    </div>

                   <div class="form-group"> 
                        <label class="col-lg-4 control-label">角色等级</label>
                        <div class="col-lg-5">
                            <div class="form-group no-margin">
                                <select  name="level" class="form-control">
                                    <option value="0">超级</option>
                                    <option value="1">管理</option>
                                    <option value="2">其他</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-7 col-lg-offset-4">
                            <button type="submit" class="btn btn-warning">提交</button>
                            <button type="reset" class="btn btn-info" style="margin-left: 50px;">重置</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
   .col-lg-4{
       width:18.3333%;
   }
</style>
